<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Include your head partial for meta tags, links to styles, etc. -->
    <%- include("./partials/head.ejs") %>

    <style>
      .btn-pink {
        background-color: #de5499;
        border-radius: 10px;
        font-weight: 800;
        box-shadow: 3px 3px 0px 0px #e99f4c;
      }

      .btn-pink:hover {
        opacity: 0.9;
      }

      .admin-button-container {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
      }

      .admin-button {
        width: 48%;
        padding: 12px;
        background-color: #264143;
        color: white;
        border-radius: 10px;
        font-weight: bold;
        cursor: pointer;
        box-shadow: 3px 3px 0px 0px #e99f4c;
      }

      .admin-button:hover {
        opacity: 0.9;
      }

      .form-control {
        border-radius: 10px;
      }
    </style>
  </head>
  <title>Responsive Login Form</title>
  <body>
    <div
      class="container d-flex justify-content-center align-items-center min-vh-100"
    >
      <div class="bg-light border border-dark rounded-3 shadow-sm p-4">
        <p class="text-center text-dark fw-bold fs-3 mb-4">LOGIN</p>
        <form action="/api/auth/login" method="POST">
          <!-- Admin Selection Buttons -->
          <div class="admin-button-container">
            <button
              type="button"
              class="admin-button"
              id="mainAdminBtn"
              onclick="autoFillMainAdmin()"
            >
              Login as Main Admin
            </button>
            <button
              type="button"
              class="admin-button"
              id="guestAdminBtn"
              onclick="autoFillGuestAdmin()"
            >
              Login as Guest Admin
            </button>
          </div>

          <!-- Email Field -->
          <div class="mb-3">
            <label for="email" class="form-label fw-semibold">Email</label>
            <input
              type="email"
              class="form-control border-dark shadow-sm p-3 mb-2 rounded-3"
              id="email"
              name="email"
              placeholder="Enter your email"
              required
            />
          </div>

          <!-- Password Field -->
          <div class="mb-3">
            <label for="password" class="form-label fw-semibold"
              >Password</label
            >
            <input
              type="password"
              class="form-control border-dark shadow-sm p-3 mb-2 rounded-3"
              id="password"
              name="password"
              placeholder="Enter your password"
              required
            />
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="btn btn-pink w-100 py-3 mt-3 fw-bold shadow-sm"
          >
            LOGIN
          </button>

          <!-- Link to Sign Up page -->
          <p class="text-center mt-3">
            Don't have an Account?
            <a href="/user/signin" class="text-dark fw-bold">Sign Up Here!</a>
          </p>
        </form>
      </div>
    </div>

    <!-- Include your script partial (e.g., for Bootstrap JS and Popper.js) -->
    <%- include("./partials/script.ejs") %>

    <script>
      // Function to auto-fill Main Admin credentials
      function autoFillMainAdmin() {
        document.getElementById("email").value = "mainAdmin@email.com";
        document.getElementById("password").value = "ma123";
      }

      // Function to auto-fill Guest Admin credentials
      function autoFillGuestAdmin() {
        document.getElementById("email").value = "guestAdmin@email.com";
        document.getElementById("password").value = "ga123";
      }
    </script>
  </body>
</html>
