<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    
    <style>
      .btn-pink {
        background-color: #de5499;
        border-radius: 10px;
        font-weight: 800;
        box-shadow: 3px 3px 0px 0px #e99f4c;
      }
      .btn-pink:hover {
        opacity: 0.9;
      }
    </style>
  </head>
  <body>
    <div class="container my-5">
      <h1 class="text-center text-dark fw-bold mb-4">
        Guest Onboarding for <%= hotel.name %>
      </h1>

      <!-- Guest Onboarding Form -->
      <form
        action="/guest/<%= hotel._id %>"
        method="POST"
        class="border-dark shadow-sm rounded-3 p-4 bg-light"
      >
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control border-dark shadow-sm rounded-3"
            id="name"
            name="name"
            required
          />
        </div>
        <div class="mb-3">
          <label for="mobileNumber" class="form-label">Mobile Number</label>
          <input
            type="tel"
            class="form-control border-dark shadow-sm rounded-3"
            id="mobileNumber"
            name="mobileNumber"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control border-dark shadow-sm rounded-3"
            id="email"
            name="email"
            required
          />
        </div>
        <div class="mb-3">
          <label for="address" class="form-label">Address</label>
          <textarea
            class="form-control border-dark shadow-sm rounded-3"
            id="address"
            name="address"
            rows="3"
            required
          ></textarea>
        </div>
        <div class="form-group">
          <label for="purposeOfVisit">Purpose of Visit:</label>
          <select
            name="purposeOfVisit"
            id="purposeOfVisit"
            class="form-control"
            required
          >
            <option value="Business">Business</option>
            <option value="Personal">Personal</option>
            <option value="Tourist">Tourist</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="stayFromDate" class="form-label">Stay From</label>
          <input
            type="date"
            class="form-control border-dark shadow-sm rounded-3"
            id="stayFromDate"
            name="stayFromDate"
            required
          />
        </div>
        <div class="mb-3">
          <label for="stayToDate" class="form-label">Stay To</label>
          <input
            type="date"
            class="form-control border-dark shadow-sm rounded-3"
            id="stayToDate"
            name="stayToDate"
            required
          />
        </div>
        <div class="mb-3">
          <label for="idProofNumber" class="form-label">ID Proof Number</label>
          <input
            type="text"
            class="form-control border-dark shadow-sm rounded-3"
            id="idProofNumber"
            name="idProofNumber"
            required
          />
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-pink shadow-sm px-4">
            Submit
          </button>
        </div>
      </form>
    </div>

    <%- include("./partials/script.ejs") %>
  </body>
</html>
