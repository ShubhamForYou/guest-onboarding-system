<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .btn-pink {
        background-color: #de5499;
        border-radius: 10px;
        font-weight: 800;
        box-shadow: 3px 3px 0px 0px #e99f4c;
      }
      .btn-pink:hover {
        opacity: 0.9;
      }
    </style>
  </head>
  <body>
    <div
      class="container d-flex justify-content-center align-items-center min-vh-100"
    >
      <div class="bg-light border border-dark rounded-3 shadow-sm p-4 w-100">
        <p class="text-center text-dark fw-bold fs-3 mb-4">
          Edit Hotel Details
        </p>

        <!-- Edit Hotel Form -->
        <form
          action="/main-admin/hotel/<%= hotel._id %>/update"
          method="POST"
          class="mb-4"
        >
          <input type="hidden" name="_method" value="PUT" />
          <div class="mb-3">
            <label for="hotelName" class="form-label fw-semibold"
              >Hotel Name</label
            >
            <input
              type="text"
              class="form-control border-dark shadow-sm p-3 mb-2 rounded-3"
              id="hotelName"
              name="name"
              value="<%= hotel.name %>"
              placeholder="Enter hotel name"
              required
            />
          </div>
          <div class="mb-3">
            <label for="hotelAddress" class="form-label fw-semibold"
              >Hotel Address</label
            >
            <input
              type="text"
              class="form-control border-dark shadow-sm p-3 mb-2 rounded-3"
              id="hotelAddress"
              name="address"
              value="<%= hotel.address %>"
              placeholder="Enter hotel address"
              required
            />
          </div>
          <button
            type="submit"
            class="btn btn-pink w-100 py-3 mt-3 fw-bold shadow-sm"
          >
            Update Hotel
          </button>
        </form>

        <!-- Back to Hotel List -->
        <div class="text-center mt-3">
          <a href="/main-admin/hotels" class="btn btn-secondary btn-block">
            Back to Hotels
          </a>
        </div>
      </div>
    </div>

    <%- include("./partials/script.ejs") %>
  </body>
</html>
