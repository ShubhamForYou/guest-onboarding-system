<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .btn-pink {
        background-color: #de5499;
        border-radius: 10px;
        font-weight: 800;
        box-shadow: 3px 3px 0px 0px #e99f4c;
      }
      .btn-pink:hover {
        opacity: 0.9;
      }
    </style>
  </head>
  <body>
    <div class="container my-5">
      <%- include("./partials/logout.ejs") %>
      <h1 class="text-center text-dark fw-bold mb-4">Guest Details</h1>

      <!-- Guest Details -->
      <div class="card border-dark shadow-sm rounded-3">
        <div class="card-body">
          <h4 class="card-title text-dark fw-bold"><%= guest.name %></h4>
          <hr />
          <p class="card-text">
            <strong>Phone Number:</strong> <%= guest.mobileNumber %>
          </p>
          <p class="card-text"><strong>Email:</strong> <%= guest.email %></p>
          <p class="card-text">
            <strong>ID Proof Number:</strong> <%= guest.idProofNumber %>
          </p>
          <p class="card-text">
            <strong>Address:</strong> <%= guest.address %>
          </p>
          <p class="card-text">
            <strong>Purpose of Visit:</strong> <%= guest.purposeOfVisit %>
          </p>
          <p class="card-text">
            <strong>Stay From:</strong> <%=
            guest.stayFromDate.toISOString().split("T")[0] %>
          </p>
          <p class="card-text">
            <strong>Stay To:</strong> <%=
            guest.stayToDate.toISOString().split("T")[0] %>
          </p>
          <p class="card-text">
            <strong>Hotel Name:</strong> <%= hotel.name %>
          </p>
          <p class="card-text">
            <strong>Hotel Address:</strong> <%= hotel.address %>
          </p>
        </div>
      </div>

      <!-- Actions -->
      <div class="mt-4 d-flex justify-content-between">
        <a
          href="/guest-admin/<%= guest._id %>/guest/edit"
          class="btn btn-secondary shadow-sm px-4"
        >
          Edit Guest
        </a>
      </div>

      <!-- Back Button -->
      <div class="text-center mt-4">
        <a
          href="/guest-admin/<%= hotel._id %>/guests"
          class="btn btn-outline-dark px-4"
        >
          Back to Guests
        </a>
      </div>
    </div>

    <%- include("./partials/script.ejs") %>
  </body>
</html>
