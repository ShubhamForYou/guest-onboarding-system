<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Include your head partial for meta tags, links to styles, etc. -->
    <%- include("./partials/head.ejs") %>

    <style>
      .btn-pink {
        background-color: #de5499;
        border-radius: 10px;
        font-weight: 800;
        box-shadow: 3px 3px 0px 0px #e99f4c;
      }

      .btn-pink:hover {
        opacity: 0.9;
      }
    </style>
  </head>
  <title>Responsive Sign Up Form</title>
  <body>
    <div
      class="container d-flex justify-content-center align-items-center min-vh-100"
    >
      <div class="bg-light border border-dark rounded-3 shadow-sm p-4">
        <p class="text-center text-dark fw-bold fs-3 mb-4">SIGN UP</p>
        <form action="/api/auth/signin" method="POST">
          <!-- Name Field -->
          <div class="mb-3">
            <label for="name" class="form-label fw-semibold">Name</label>
            <input
              type="text"
              class="form-control border-dark shadow-sm p-3 mb-2 rounded-3"
              id="name"
              name="name"
              placeholder="Enter your full name"
              required
            />
          </div>

          <!-- Email Field -->
          <div class="mb-3">
            <label for="email" class="form-label fw-semibold">Email</label>
            <input
              type="email"
              class="form-control border-dark shadow-sm p-3 mb-2 rounded-3"
              id="email"
              name="email"
              placeholder="Enter your email"
              required
            />
          </div>

          <!-- Role Dropdown -->
          <div class="mb-3">
            <label for="role" class="form-label fw-semibold">Role</label>
            <select
              class="form-select border-dark shadow-sm p-3 mb-2 rounded-3"
              id="role"
              name="role"
              required
            >
              <option value="" disabled selected>Select your role</option>
              <option value="main-admin">Main Admin</option>
              <option value="guest-admin">Guest Admin</option>
            </select>
          </div>

          <!-- Password Field -->
          <div class="mb-3">
            <label for="password" class="form-label fw-semibold"
              >Password</label
            >
            <input
              type="password"
              class="form-control border-dark shadow-sm p-3 mb-2 rounded-3"
              id="password"
              name="password"
              placeholder="Enter your password"
              required
            />
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="btn btn-pink w-100 py-3 mt-3 fw-bold shadow-sm"
          >
            SIGN UP
          </button>

          <!-- Link to Login page -->
          <p class="text-center mt-3">
            Have an Account?
            <a href="/login" class="text-dark fw-bold">Login Here!</a>
          </p>
        </form>
      </div>
    </div>

    <!-- Include your script partial (e.g., for Bootstrap JS and Popper.js) -->
    <%- include("./partials/script.ejs") %>
  </body>
</html>
